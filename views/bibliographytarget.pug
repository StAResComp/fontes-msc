extends bibliography

mixin targetmodal(info, index)
    div(id=("modal-" + index) class="modal")
        div(class="modal-content")
            div(class="modal-header")
                span(class="modal-close") &times;
                h2 Target Text Information
            div(class="modal-body")
                table(id="citation-table" class="bibliography-table")
                    tr
                        td #[strong Title:]
                        td= info.title
                    tr
                        td #[strong Author:]
                        td= info.author
                    tr
                        td #[strong Edition:]
                        td= info.textedition
                    tr
                        td #[strong Publication Details:]
                        td= info.publicationdetails


block tablecontent
    table(id="table-3-col" class="texts-results-table")
        thead
            tr
                th Title
                th Author
                th Edition
        tbody
            each record, index in tabledata
                tr(id=("bibliography-row-" + index) class="bibliography-row")
                    td= record.title
                    td= record.author
                    td= record.textedition
                    
    each record, index in tabledata
        +targetmodal(record, index)
