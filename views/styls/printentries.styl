@media only screen
    *
        display: none

@media print
    *
        box-sizing: border-box
        font-family: "Cormorant Garamond", serif
        color: black
        margin: 0
        padding: 0

    body
        background-color: white
        font-size: 12px
        border-bottom: black 3px solid

    #top
        border-bottom: black 3px solid
        img
            width: 125px
            height: auto
            margin-bottom: 5px
        h1
            font-size: 48px
            float: right

    #texts
        border-bottom: black 3px solid
        table
            padding: 7px 0
            table-layout: fixed
            width: 100%
            font-size: 12px
            .title
                font-size: 16px
            .title-text
                font-weight: 600
            tbody tr td:first-child
                width: 45%
        #target
            border-bottom: black 1px solid

    #results
        table
            font-size: 12px
            width: 90%
            margin: 0 auto
            padding: 10px 0
            border-bottom: black 1px solid
            table-layout: fixed
            &:last-child
                border-bottom: none
            tbody tr td:nth-child(1)
                width: 25%
            tbody tr td:nth-child(2)
                width: 65%
            tbody tr td:nth-child(3)
                width: 10%
